<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Colon Seguros - Plataforma Camaras</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
   
</head>
<meta name="viewport" content="width=device-width, initial-scale=1.0"> 
<body id="clrblk">
 <div class="container">   
 <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                   
   <center><img src="https://www.colonseguros.com.ar/wp-content/uploads/2017/09/logo-colon.jpg"></center>
   <div class="panel panel-info" >
         <div class="panel-heading">
            <div class="panel-title">Colón Seguros - Plataforma Camaras</div>
         </div>    
     <div style="padding-top:30px" class="panel-body" >
     <% if (message.length > 0) { %>
      <div class="alert alert-danger col-sm-12"><%= message %></div>
     <% } %>        
        <form id="loginform" class="form-horizontal" role="form" method="post" action="/login">
         <div style="margin-bottom: 25px" class="input-group">
           <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input id="login-username" type="text" class="form-control" name="user_name" value="" placeholder="Usuario">                                       
         </div>
         <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <input id="login-password" type="password" class="form-control" name="password" placeholder="Contraseña">
        </div>
         <div class="input-group">
        </div>
         <div style="margin-top:10px" class="form-group">
         <div class="col-sm-12 controls">
           <button id="btn-login" type="submit" class="btn btn-success">ENTRAR </button>
         </div>
      </div>
         </form>    
     </div>                    
    </div> 
 </div>
 </div>
</body>
</html>